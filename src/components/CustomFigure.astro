---
import { Image } from "astro:assets";
const { src, alt, caption, width = 800, height = 400, float } = Astro.props;
---

<figure id="imageFigure" style="display: inline-block; cursor: pointer;">
  <Image
    src={src}
    alt={alt || "Image description"}
    width={width}
    height={height}
    loading="lazy"
  />
  {caption && <figcaption>Bild: {caption}</figcaption>}
</figure>

<div id="imageModal" style="display:none;">
  <span
    id="closeModal"
    style="position: absolute; top: 20px; right: 20px; font-size: 30px; cursor: pointer;"
    >&times;</span
  >
  <img id="modalImage" style="width: 100%; max-width: 100%;" />
  <div id="caption" style="text-align: center; color: white; padding: 10px;">
  </div>
</div>

<script>
  window.addEventListener("load", function () {
    const figure = document.getElementById("imageFigure");
    const modal = document.getElementById("imageModal");
    const modalImg = document.getElementById("modalImage") as HTMLImageElement;
    const captionText = document.getElementById("caption") as HTMLElement;

    if (figure && modal && modalImg && captionText) {
      figure.addEventListener("click", function (event: MouseEvent) {
        const clickedImg = event.target as HTMLImageElement;

        if (clickedImg && modalImg) {
          modal.style.display = "block";
          modalImg.src = clickedImg.src;

          const caption = clickedImg.nextElementSibling;
          if (caption && caption.nodeName === "FIGCAPTION") {
            captionText.innerHTML = caption.innerHTML;
          }
        }
      });

      const closeModalButton = document.getElementById("closeModal");
      if (closeModalButton) {
        closeModalButton.addEventListener("click", function () {
          modal.style.display = "none";
        });
      }

      window.addEventListener("click", function (event: MouseEvent) {
        if (event.target === modalImg || event.target === modal) {
          modal.style.display = "none";
        }
      });
    }
  });
</script>

<style define:vars={{height, width, float}}>
  #imageModal {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    background-color: rgba(0, 0, 0, 0.8);
    z-index: 1000;
    display: none;
    width: 80%;
    max-width: 900px;
    max-height: 80%;
    border-radius: 8px;
    overflow: hidden;
    padding: 20px;
    box-sizing: border-box;
  }

  #modalImage {
    max-width: 100%;
    max-height: 100%;
    object-fit: contain;
  }

  #caption {
    font-size: 20px;
    color: white;
    margin-top: 20px;
  }

  figure {
    display: inline-block;
    margin: 0;
    margin-bottom: 1em;
    float: var(--float);
  }
  img {
    max-width: 100%;
    height: var(--height);
    width: var(--width);
    /* box-shadow: 0.5rem 0.5rem 0.5rem 0.5rem #eee; */
    /*border: 4px solid #f5f5f5;  /* ljusgr√• ram */
    /*border-radius: 4px;*/
  }
  figcaption {
    caption-side: bottom;
    font-style: italic;
    text-align: left;
  }
  .right {
    float: right;
    margin-left: 1em;
  }
  .left {
    float: left;
    margin-right: 1em;
  }
